print("Task 1: Countdown")
print("\n")
for i in range(10, 0, -1):
    print(i)
print("Blast off!")

print("Task 2: Sum Calculator")
print("\n")
total = 0

while True:
    num = int(input("Enter a number (0 to stop): "))
    if num == 0:
        break
    total += num

print("Final sum:", total)

print("\nTask 3: Password Entry")
print("\n")
correct_password = "python"
attempts = 0

while attempts < 3:
    password = input("Enter password: ")
    if password == correct_password:
        print("Access granted")
        break
    else:
        attempts += 1
        print("Wrong password")

if attempts == 3:
 print("Access denied")

print("\nTask 4: Guessing Game")
print("\n")
secret_number = 7
guesses = 0

while True:
    guess = int(input("Guess a number between 1 and 10: "))
    guesses += 1

    if guess < secret_number:
        print("Too low")
    elif guess > secret_number:
        print("Too high")
    else:
        print(f"Correct! It took you {guesses} guesses.")
        break

print("\nTask 5: Menu System")
print("\n")
while True:
    print("\nMenu:")
    print("1 - Add")
    print("2 - Subtract")
    print("3 - Multiply")
    print("4 - Divide")
    print("5 - Exit")

    choice = input("Choose an option: ")

    if choice == "5":
        print("Goodbye!")
        break

    if choice in ["1", "2", "3", "4"]:
        num1 = float(input("Enter first number: "))
        num2 = float(input("Enter second number: "))

        if choice == "1":
            print("Result:", num1 + num2)
        elif choice == "2":
            print("Result:", num1 - num2)
        elif choice == "3":
            print("Result:", num1 * num2)
        elif choice == "4":
            if num2 != 0:
                print("Result:", num1 / num2)
            else:
                print("Cannot divide by zero")
    else:
        print("Invalid choice")

print ("\nTask 6: Even Numbers Only (Challenge)")
print("\n")
even_numbers = []

while True:
    num = int(input("Enter an even number (0 to stop): "))

    if num == 0:
        break
    elif num % 2 != 0:
        print("Only even numbers!")
    else:
        even_numbers.append(num)
print("Even numbers entered:", even_numbers) 
print("\nAdvanced Challenge")
print("\n")
balance = 1000

while True:
    print("\n--- ATM Menu ---")
    print("1. Check balance")
    print("2. Deposit money")
    print("3. Withdraw money")
    print("4. Exit")

    choice = input("Choose an option (1-4): ")

    if choice == "1":
        print(f"Your current balance is: {balance}")

    elif choice == "2":
        amount = input("Enter deposit amount: ")

        if not amount.isdigit():
            print("Invalid input. Please enter a positive number.")
            continue

        amount = int(amount)
        if amount <= 0:
            print("Deposit amount must be greater than 0.")
        else:
            balance += amount
            print(f"Deposited {amount}. New balance: {balance}")

    elif choice == "3":
        amount = input("Enter withdrawal amount: ")

        if not amount.isdigit():
            print("Invalid input. Please enter a positive number.")
            continue

        amount = int(amount)
        if amount <= 0:
            print("Withdrawal amount must be greater than 0.")
        elif amount > balance:
            print("Insufficient balance.")
        else:
            balance -= amount
            print(f"Withdrew {amount}. New balance: {balance}")

    elif choice == "4":
        print("Thank you for using the ATM. Goodbye!")
        break

    else:
        print("Invalid option. Please choose between 1 and 4.") 

print("\nHomework") 
print("\nMultiplication Table")
print("\n")
num = int(input("Enter a number: "))

i = 1
while i <= 10:
    print(f"{num} x {i} = {num * i}")
    i += 1 
print("\nPositive Numbers Only (Average)") 
print("\n") 
count = 0
total = 0

while True:
    num = int(input("Enter a positive number (-1 to stop): "))

    if num == -1:
        break
    elif num > 0:
        total += num
        count += 1
    else:
        print("Only positive numbers are allowed.")

if count > 0:
    average = total / count
    print("Average:", average)
else:
    print("No positive numbers were entered.") 
print("\nSimple Game (Points System)") 
print("\n") 
import random

points = 100

while points > 0:
    loss = random.randint(5, 15)
    points -= loss
    print(f"You lost {loss} points. Remaining points: {points}")

print("Game over!")
print("Final score:", points)